<Page x:Class="DirectionToPractice.Views.ListStudentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DirectionToPractice.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListStudentPage">

    <Grid>
        <DataGrid LoadingRow="Ai" ItemsSource="{Binding Students}" SelectedItem="{Binding SelectedStudent}">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding ToCreateDirectionPage}" Header="Создать направление"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" IsReadOnly="True" Binding="{Binding Surname}"/>
                <DataGridTextColumn Header="Имя" IsReadOnly="True" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Отчество" IsReadOnly="True" Binding="{Binding Patronymic}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
