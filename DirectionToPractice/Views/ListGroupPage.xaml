<Page x:Class="DirectionToPractice.Views.ListGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DirectionToPractice.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListGroupPage">

    <Grid>
        <DataGrid LoadingRow="Ai" ItemsSource="{Binding Groups}" SelectedItem="{Binding SelectedGroup}" >
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Command="{Binding GetStudents}" Header="Студенты группы"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Number}" IsReadOnly="True" Header="Номер группы"/>
                <DataGridTextColumn Binding="{Binding Course}" IsReadOnly="True" Header="Курс"/>
                <DataGridTextColumn Binding="{Binding Speciality.Name}" IsReadOnly="True" Header="Название специальности"/>
                <DataGridTextColumn Binding="{Binding Speciality.Code}" IsReadOnly="True" Header="Код специальности"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
