<Window x:Class="DirectionToPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectionToPractice"
        mc:Ignorable="d"
        Title="Направление на практику" WindowStartupLocation="CenterScreen" MinHeight="650" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1" Background="#FF2B579A">
            <StackPanel>
                <Button Margin="3 20 3 3" Content="Список всех групп" Command="{Binding ListGroups}"/>
                <Button Content="Список всех студентов" Command="{Binding ListStudents}"/>
            </StackPanel>
        </Border>
        <Frame Grid.Column="0" NavigationUIVisibility="Hidden" Content="{Binding CurrentPage}"/>
    </Grid>
</Window>
