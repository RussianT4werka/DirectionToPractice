<Window x:Class="DirectionToPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectionToPractice"
        mc:Ignorable="d"
        Title="Направление на практику" WindowStartupLocation="CenterScreen" MinHeight="650" MinWidth="1450">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        
        
        <Grid Grid.Column="1" Background="#FF2B579A">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Margin="0" Content="Составить направления" Command="{Binding CreateDirection}"/>
            <Button Grid.Row="1" Margin="0" Content="Список направлений*" Command="{Binding ListAllCreatedDirection}"/>
            <Button Grid.Row="2" Margin="0" Command="{Binding ToUpdateBDPage}" Content="Обновить БД"/>
            <Button Grid.Row="3" Margin="0" Command="{Binding Info}" Content="О приложении*"/>
        </Grid>
        <Frame Grid.Column="0" NavigationUIVisibility="Hidden" Content="{Binding CurrentPage}"/>
    </Grid>
</Window>
