<Window x:Class="DirectionToPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectionToPractice"
        mc:Ignorable="d"
        Title="Направление на практику" WindowStartupLocation="CenterScreen" MinHeight="650" MinWidth="1450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.3*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="1" Background="#FF2B579A">
            <StackPanel>
                <Button Margin="3 20 3 20" Content="Составить направления" Command="{Binding CreateDirection}"/>
                <Button Content="Список направлений*" Command="{Binding ListAllCreatedDirection}"/>
                <Button Height="390" Visibility="Hidden"/>
                <Button Margin="3 0 3 20" Command="{Binding ToUpdateBDPage}" Content="Обновить БД*"/>
                <Button Command="{Binding Info}" Content="О приложении*"/>
            </StackPanel>
        </Border>
        <Frame Grid.Column="0" NavigationUIVisibility="Hidden" Content="{Binding CurrentPage}"/>
    </Grid>
</Window>
